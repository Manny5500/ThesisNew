<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Widget.Material3.CardView.Elevated"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15sp"
    app:cardElevation="10sp"
    android:layout_margin="4sp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/barangayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="01. Alipit"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/optCoverage"/>
        <TextView
            android:id="@+id/optCoverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OPT Coverage: 48.15%"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/barangayTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/malCases"/>
        <TextView
            android:id="@+id/malCases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="U and SU: "
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/optCoverage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/malPercent"
            app:layout_constraintBottom_toTopOf="@id/NormalCases"/>
        <TextView
            android:id="@+id/malPercent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="(%): "
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/malCases"
            app:layout_constraintStart_toEndOf="@+id/malCases"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/NormalCases"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Normal: "
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/malCases"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/NormalPercent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/NormalPercent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="(%): "
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/NormalCases"
            app:layout_constraintStart_toEndOf="@+id/NormalCases"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>