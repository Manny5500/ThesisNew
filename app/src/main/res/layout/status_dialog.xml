<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/blueColor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/panelUp">
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/imgBorder"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/white"
        app:tint="@color/white"
        app:srcCompat="@drawable/question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/panelUp"
        app:layout_constraintBottom_toBottomOf="@id/panelUp"/>
    <ImageView
        android:id="@+id/imgAct"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:backgroundTint="@color/white"
        app:srcCompat="@drawable/question"
        app:layout_constraintStart_toStartOf="@id/imgBorder"
        app:layout_constraintTop_toTopOf="@id/imgBorder"
        app:layout_constraintBottom_toBottomOf="@id/imgBorder"
        app:layout_constraintEnd_toEndOf="@id/imgBorder"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Status"
        android:layout_margin="10dp"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgBorder"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/status"/>



</androidx.constraintlayout.widget.ConstraintLayout>