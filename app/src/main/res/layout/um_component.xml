<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/umcontainer"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageButton
        android:id="@+id/umDelete"
        android:layout_width="46dp"
        android:layout_height="56dp"
        android:layout_marginEnd="10dp"
        android:backgroundTint="#674FA2"
        android:src="@drawable/baseline_delete_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/umEdit"
        app:layout_constraintTop_toTopOf="@+id/umEdit" />

    <ImageButton
        android:id="@+id/umEdit"
        android:layout_width="46dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#674fa3"
        android:src="@drawable/baseline_edit_24"
        app:layout_constraintStart_toEndOf="@+id/textumName"
        app:layout_constraintTop_toTopOf="@+id/textumName" />

    <TextView
        android:id="@+id/textumName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="13dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.46" />
</androidx.constraintlayout.widget.ConstraintLayout>